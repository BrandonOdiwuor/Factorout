<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="panel">
      <div class="panel-heading" style = "background-color: #4CAF50;">
        <h4 class="text-center"> Log in to your account </h4>
      </div>
      <div class="panel-body">
        <%= form_for(:session, url: login_path) do |f| %>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password %> <strong><%= link_to "(forgot password)", new_password_reset_path, id: "password-reset",style: 'color: #4CAF50;'%></strong>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span> Remember me </span>
          <% end %>

          <%= f.submit "Log in", class: "btn btn-default", style: "background-color: #4CAF50;" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-"></div>
</div>
